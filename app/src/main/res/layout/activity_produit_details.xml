<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProduitDetails">


    <ImageView
        android:id="@+id/imageView_EmballageScan"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:maxWidth="220dp"
        android:maxHeight="220dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_nomProduit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/imageView_EmballageScan"
        android:text="Nom du produit"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_marqueProduit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_nomProduit"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageView_EmballageScan"
        android:text="Marque du produit"
        android:textAlignment="center"
        android:textSize="17dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/firstDescription"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:visibility="invisible"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            >


            <TextView
                android:id="@+id/textView"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textSize="20dp"
                 />

            <ImageView
                android:id="@+id/imageView_poubelle1"
                android:layout_width="106dp"
                android:layout_height="113dp"
                android:layout_marginLeft="5dp"

                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondDescription"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_below="@+id/firstDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/linearLayout2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/imageView_poubelle2"
                android:layout_width="105dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"

                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/thirdDescription"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_below="@+id/secondDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/linearLayout3"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="TextView"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/imageView_poubelle3"
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"

            tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>